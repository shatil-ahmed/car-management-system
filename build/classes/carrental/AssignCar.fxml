<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="300" prefWidth="400" style="-fx-padding: 20;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/20.0.1" fx:controller="carrental.AssignCarController">

    <VBox spacing="15" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Assign Car to Customer" />

        <HBox spacing="10">
            <Label minWidth="80" text="Select Car:" />
            <ComboBox fx:id="carComboBox" prefWidth="200" />
        </HBox>

        <HBox spacing="10">
            <Label minWidth="80" text="Select Customer:" />
            <ComboBox fx:id="customerComboBox" prefWidth="200" />
        </HBox>

        <HBox spacing="10">
            <Button onAction="#handleAddCar" prefWidth="90" text="Add Car" />
            <Button onAction="#handleEditCar" prefWidth="90" text="Edit Car" />
            <Button onAction="#handleAssign" prefWidth="90" text="Assign" />
        </HBox>

        <Label fx:id="statusLabel" style="-fx-text-fill: red;" />
    </VBox>
   <Button fx:id="buttonBack" layoutX="309.0" layoutY="18.0" mnemonicParsing="false" onAction="#back" text="Back" />

</AnchorPane>
