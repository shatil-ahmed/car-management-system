<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="carrental.CustomerManagementController">

    <TableView fx:id="customerTable" prefHeight="400" prefWidth="600">
        <columns>
            <TableColumn fx:id="colId" prefWidth="50" text="ID" />
            <TableColumn fx:id="colName" prefWidth="150" text="Name" />
            <TableColumn fx:id="colEmail" prefWidth="200" text="Email" />
            <TableColumn fx:id="colPhone" prefWidth="150" text="Phone" />
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button onAction="#handleAddCustomer" text="Add Customer" />
        <Button onAction="#handleEditCustomer" text="Edit Customer" />
      <Button fx:id="buttonBack" mnemonicParsing="false" onAction="#back" text="Back" />
    </HBox>

</VBox>
