<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="car.rental.managment.system.SignUpController"
            prefWidth="600" prefHeight="400">

    <children>
        <Label layoutX="250" layoutY="30" 
               text="Sign Up" 
               style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <TextField fx:id="usernameField" 
                   layoutX="200" layoutY="80" 
                   prefWidth="200" 
                   promptText="Username" />

        <TextField fx:id="emailField" 
                   layoutX="200" layoutY="120" 
                   prefWidth="200" 
                   promptText="Email" />

        <PasswordField fx:id="passwordField" 
                       layoutX="200" layoutY="160" 
                       prefWidth="200" 
                       promptText="Password" />

        <!-- Added fx:id to button -->
        <Button fx:id="signUpButton"
                layoutX="250" layoutY="210" 
                prefWidth="100" 
                text="Sign Up" 
                onAction="#handleSignUp" />

        <Label fx:id="statusLabel" 
               layoutX="200" layoutY="260" 
               prefWidth="250" 
               textFill="red" />
    </children>
</AnchorPane>
